<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication00" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/lightbg</item>
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/lightbg</item>
    </style>

        <style name="Tab_theme" parent="Widget.MaterialComponents.TabLayout">
            <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        </style>
        <style name="ThemeOverlay.App.TabLayout" parent="">
            <item name="colorPrimary">@color/black</item>
            <item name="colorSurface">@color/darkbg</item>
            <item name="colorOnSurface">@color/black</item>
            <item name="android:textSize">10sp</item>
            <item name="android:fontStyle">normal</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:fontFamily">@font/notosans_regular</item>
        </style>

        <style name="TitleTextView"  parent="@android:style/Widget.TextView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">26sp</item>
            <item name="android:layout_marginBottom">8dp</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:fontFamily">@font/notosans_bold</item>
            <item name="android:includeFontPadding">false</item>
        </style>

        <style name="TextView"  parent="@android:style/Widget.TextView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@drawable/edittext_style</item>
            <item name="android:textSize">14sp</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:layout_marginVertical">3dp</item>
            <item name="android:paddingVertical">10dp</item>
            <item name="android:paddingLeft">15dp</item>
            <item name="android:textColorHint">@color/black</item>
            <item name="android:fontFamily">@font/notosans_regular</item>
            <item name="android:includeFontPadding">false</item>
        </style>

        <style name="editText"  parent="@android:style/Widget.EditText">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@drawable/edittext_style</item>
            <item name="android:textSize">14sp</item>
            <item name="android:layout_marginVertical">3dp</item>
            <item name="android:paddingVertical">10dp</item>
            <item name="android:paddingLeft">15dp</item>
            <item name="android:textColorHint">@color/grey</item>
            <item name="android:fontFamily">@font/notosans_regular</item>
            <item name="android:includeFontPadding">false</item>
        </style>

        <style name="DiaryText"  parent="@android:style/Widget.TextView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">10sp</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:fontFamily">@font/notosans_regular</item>
            <item name="android:includeFontPadding">false</item>
        </style>
</resources>